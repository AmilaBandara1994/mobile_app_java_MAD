<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page02">

    <TextView
        android:id="@+id/page2_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:text="CACULATOR"
        android:textColor="@color/white"
        android:background="@color/indigo_900"
        android:textAlignment="center"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/page2_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <Button
        android:id="@+id/page2_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/page2_btn_3"
        app:layout_constraintStart_toStartOf="@id/page2_btn_1" />

    <Button
        android:id="@+id/page2_btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Page 03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/page2_btn_2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page2_textView"
        app:layout_constraintVertical_bias="0.141"
        tools:layout_editor_absoluteX="-16dp">

        <TextView
            android:id="@+id/cal_display"
            android:layout_height="100dp"
            android:layout_margin="20sp"
            android:outlineProvider="background"
            android:padding="20sp"
            android:text="Calculator"
            android:textAlignment="viewEnd"
            android:textColor="@color/indigo_800"
            android:textSize="38sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/page2_textView" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <Button
                android:id="@+id/calculator_btn_1"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/indigo_800"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_2"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/indigo_800"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_3"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:backgroundTint="@color/indigo_800"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_plus"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/green"
                android:onClick="actionHandler"
                android:tag="add"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <Button
                android:id="@+id/calculator_btn_4"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/indigo_800"
                android:text="4"
                android:textSize="20dp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_5"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/indigo_800"
                android:text="5"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_6"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/indigo_800"
                android:text="6"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_minus"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:onClick="actionHandler"
                android:tag="sub"
                android:text="-"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/calculator_btn_7"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/indigo_800"
                android:text="7"
                android:textSize="20dp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_8"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/indigo_800"
                android:text="8"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_9"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/indigo_800"
                android:text="9"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_div"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:onClick="actionHandler"
                android:tag="div"
                android:text="/"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/calculator_btn_module"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/warning"
                android:onClick="actionHandler"
                android:tag="mod"
                android:text="C"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/calculator_btn_0"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/indigo_800"
                android:text="0"
                android:textSize="19dp"
                app:cornerRadius="100dp" />
            <Button
                android:id="@+id/calculator_btn_equal"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:onClick="actionHandler"
                android:tag="eql"
                android:text="="
                android:textSize="20dp"
                app:cornerRadius="100dp" />


            <Button
                android:id="@+id/calculator_btn_mul"
                android:layout_width="64dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:onClick="actionHandler"
                android:tag="mul"
                android:text="*"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>